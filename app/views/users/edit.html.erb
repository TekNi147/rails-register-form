<h1>Edit User</h1>
<%= form_with(model: @user, url: update_user_path) do |form| %>
  <div>
    <%= form.label :firstName %>
    <%= form.text_field :firstName %>
  </div>
  <div>
    <%= form.label :lastName %>
    <%= form.text_field :lastName %>
  </div>
  <div>
    <%= form.label :birthDay %>
    <%= form.date_field :birthDay %>
  </div>
  <div>
    <%= form.label :gender, "Select Gender" %><br>
    <%= form.radio_button :gender, "Male" %>
    <%= form.label :gender, "Male", value: "Male" %><br>
    <%= form.radio_button :gender, "Female" %>
    <%= form.label :gender, "Female", value: "Female" %><br>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>
  <div>
    <%= form.label :subject %>
    <%= form.select :subject, options_for_select([["Thailand", "TH"], ["United States", "US"], ["United Kingdom", "UK"]], @user.subject) %>
  </div>
  <%= form.submit "Update User" %>
<% end %>
<%= link_to 'Back', users_path %>